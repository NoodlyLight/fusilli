if USE_GTK

if USE_METACITY
metacitylibs = @METACITY_LIBS@
endif

gtk_window_decorator_DEPENDENCIES = \
	$(top_builddir)/libdecoration/libdecoration.la
gtk_window_decorator_LDADD	  =		       \
	$(top_builddir)/libdecoration/libdecoration.la \
	@GTK_WINDOW_DECORATOR_LIBS@		       \
	@DBUS_GLIB_LIBS@			       \
	$(metacitylibs)

