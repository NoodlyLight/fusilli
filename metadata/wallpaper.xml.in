<?xml version="1.0" encoding="UTF-8"?>
<fusilli>
	<plugin name="wallpaper">
		<_short>Wallpaper</_short>
		<_long>Draw the desktop wallpaper</_long>
		<category>Utility</category>
		<deps>
			<relation type="after">
				<plugin>svg</plugin>
			</relation>
		</deps>

		<group>
			<_short>General</_short>

			<subgroup multilist="true">
				<_short>Backgrounds</_short>

				<option name="bg_image" type="list_string" per_screen="true">
					<_short>Image</_short>
					<_long>Image file</_long>
					<hints>file;image;</hints>
				</option>

				<option name="bg_image_pos" type="list_int" per_screen="true">
					<_short>Position</_short>
					<_long>Image position</_long>
					<min>0</min>
					<max>4</max>
					<default>2</default>
					<desc>
						<value>0</value>
						<_name>Scale and Crop</_name>
					</desc>
					<desc>
						<value>1</value>
						<_name>Scaled</_name>
					</desc>
					<desc>
						<value>2</value>
						<_name>Centered</_name>
					</desc>
					<desc>
						<value>3</value>
						<_name>Tiled</_name>
					</desc>
					<desc>
						<value>4</value>
						<_name>Center Tiled</_name>
					</desc>
				</option>

				<option name="bg_fill_type" type="list_int" per_screen="true">
					<_short>Fill type</_short>
					<_long>Background fill type</_long>
					<min>0</min>
					<max>2</max>
					<default>2</default>
					<desc>
						<value>0</value>
						<_name>Solid fill</_name>
					</desc>
					<desc>
						<value>1</value>
						<_name>Vertical gradient</_name>
					</desc>
					<desc>
						<value>2</value>
						<_name>Horizontal gradient</_name>
					</desc>
				</option>

				<option name="bg_color1" type="list_string" per_screen="true">
					<_short>Color 1</_short>
					<_long>Fill or first gradient color</_long>
					<default>#ffffffff</default>
					<hint>color</hint>
				</option>

				<option name="bg_color2" type="list_string" per_screen="true">
					<_short>Color 2</_short>
					<_long>Second gradient color</_long>
					<default>#000000ff</default>
					<hint>color</hint>
				</option>

			</subgroup>
		</group>
	</plugin>
</fusilli>

	
	
