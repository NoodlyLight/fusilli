<?xml version="1.0" encoding="UTF-8"?>
<fusilli>
	<plugin name="resize">
		<_short>Resize Window</_short>
		<_long>Resize window</_long>
		<category>Window Management</category>

		<group>
			<_short>General</_short>

			<subgroup>
				<option name="initiate_button" type="string">
					<_short>Initiate Window Resize</_short>
					<_long>Start resizing window</_long>
					<hint>button</hint>
					<default>&lt;Alt&gt;Button2</default>
				</option>

				<option name="initiate_key" type="string">
					<_short>Initiate Window Resize</_short>
					<_long>Start resizing window</_long>
					<hint>key</hint>
					<default>&lt;Alt&gt;F8</default>
				</option>

				<option name="mode" type="int">
					<_short>Default Resize Mode</_short>
					<_long>Default mode used for window resizing</_long>
					<default>0</default>
					<min>0</min>
					<max>3</max>
					<desc>
						<value>0</value>
						<_name>Normal</_name>
					</desc>
					<desc>
						<value>1</value>
						<_name>Outline</_name>
					</desc>
					<desc>
						<value>2</value>
						<_name>Rectangle</_name>
					</desc>
					<desc>
						<value>3</value>
						<_name>Stretch</_name>
					</desc>
				</option>

				<option name="border_color" type="string">
					<_short>Border Color</_short>
					<_long>Border color used for outline and rectangle resize modes</_long>
					<hint>color</hint>
					<default>#2f2f4f9f</default>
				</option>

				<option name="fill_color" type="string">
					<_short>Fill Color</_short>
					<_long>Fill color used for rectangle resize mode</_long>
					<hint>color</hint>
					<default>#2f2f4f4f</default>
				</option>
			</subgroup>
		</group>
	</plugin>
</fusilli>
