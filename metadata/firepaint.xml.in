<?xml version="1.0" encoding="UTF-8"?>
<fusilli>
	<plugin name="firepaint">
		<_short>Firepaint</_short>
		<_long>Paint fire on the screen</_long>
		<category>Effects</category>

		<group>
			<_short>General</_short>

			<subgroup>
				<option name="initiate_button" type="string">
					<_short>Initiate Button</_short>
					<_long>Initiate fire drawing</_long>
					<hint>button</hint>
					<default>&lt;Super&gt;&lt;Shift&gt;Button1</default>
				</option>

				<option name="clear_key" type="string">
					<_short>Clear Key</_short>
					<_long>Clear</_long>
					<hint>key</hint>
					<default>&lt;Super&gt;&lt;Shift&gt;c</default>
				</option>

				<option name="num_particles" type="int" per_screen="true">
					<_short>Number of particles</_short>
					<_long>Maximum number of active particles</_long>
					<default>3000</default>
					<min>100</min>
					<max>20000</max>
				</option>

				<option name="fire_size" type="float" per_screen="true">
					<_short>Fire Particle Size</_short>
					<_long>Fire particle size.</_long>
					<default>15.0</default>
					<min>0.1</min>
					<max>40</max>
					<precision>0.1</precision>
				</option>

				<option name="fire_slowdown" type="float" per_screen="true">
					<_short>Fire Particle Slowdown</_short>
					<_long>Fire particle slowdown.</_long>
					<default>0.5</default>
					<min>0.1</min>
					<max>10</max>
					<precision>0.1</precision>
				</option>

				<option name="fire_life" type="float" per_screen="true">
					<_short>Fire Particle Life</_short>
					<_long>Fire particle life.</_long>
					<default>0.7</default>
					<min>0.1</min>
					<max>0.95</max>
					<precision>0.05</precision>
				</option>

				<option name="fire_color" type="string" per_screen="true">
					<_short>Fire Particle Color</_short>
					<_long>Fire particle color.</_long>
					<hint>color</hint>
					<default>#ff3305ff</default>
				</option>

				<option name="fire_mystical" type="bool" per_screen="true">
					<_short>Randomly Colored Fire</_short>
					<_long>Have random colors for the fire effect, also known as Mystical Fire.</_long>
					<default>false</default>
				</option>

				<option name="bg_brightness" type="int" per_screen="true">
					<_short>Background brightness</_short>
					<_long>Background brightness during paint</_long>
					<default>50</default>
					<min>0</min>
					<max>100</max>
				</option>
			</subgroup>
		</group>
	</plugin>
</fusilli>
