<?xml version="1.0" encoding="UTF-8"?>
<fusilli>
	<plugin name="wsnames">
		<_short>Workspace Naming</_short>
		<_long>Allows assigning descriptions to workspaces</_long>
		<category>Window Management</category>

		<group>
			<_short>General</_short>

			<subgroup multilist="true">
				<_short>Workspace Names</_short>

				<option name="workspace_number" type="list_int" per_screen="true">
					<_short>Number</_short>
					<_long>Number of workspace to be named</_long>
					<min>1</min>
					<max>32</max>
				</option>

				<option name="workspace_name" type="list_string" per_screen="true">
					<_short>Name</_short>
					<_long>The desired workspace name</_long>
				</option>
			</subgroup>

			<subgroup>
				<_short>Appearance</_short>
				<option name="display_time" type="float" per_screen="true">
					<_short>Display Time</_short>
					<_long>Timeout (in s) of the name display</_long>
					<min>0.1</min>
					<max>5.0</max>
					<precision>0.05</precision>
					<default>0.5</default>
				</option>

				<option name="fade_time" type="float" per_screen="true">
					<_short>Fade Time</_short>
					<_long>Time (in s) the name display fades out after being shown.</_long>
					<min>0.0</min>
					<max>5.0</max>
					<precision>0.05</precision>
					<default>0.25</default>
				</option>

				<option name="bold_text" type="bool" per_screen="true">
					<_short>Bold Font</_short>
					<_long>Selects if the text should be displayed in bold font or not.</_long>
					<default>true</default>
				</option>

				<option name="font_size" type="int" per_screen="true">
					<_short>Font Size</_short>
					<_long>Font size for the text display.</_long>
					<default>16</default>
					<min>6</min>
					<max>96</max>
				</option>

				<option name="text_placement" type="int" per_screen="true">
					<_short>Text Placement</_short>
					<_long>Selects where to place the text.</_long>
					<default>0</default>
					<min>0</min>
					<max>2</max>
					<desc>
						<value>0</value>
						<_name>Centered on screen</_name>
					</desc>
					<desc>
						<value>1</value>
						<_name>Top of screen</_name>
					</desc>
					<desc>
						<value>2</value>
						<_name>Bottom of screen</_name>
					</desc>
				</option>

				<option name="back_color" type="string" per_screen="true">
					<_short>Background Color</_short>
					<_long>Background color for the text display.</_long>
					<hint>color</hint>
					<default>#00000099</default>
				</option>

				<option name="font_color" type="string" per_screen="true">
					<_short>Font Color</_short>
					<_long>Font color for the text display.</_long>
					<hint>color</hint>
					<default>#ffffffff</default>
				</option>
			</subgroup>
		</group>
	</plugin>
</fusilli>
