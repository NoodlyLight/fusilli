<?xml version="1.0" encoding="UTF-8"?>
<fusilli>
	<plugin name="obs">
		<_short>Opacity, Brightness and Saturation</_short>
		<_long>Opacity, Brightness and Saturation adjustments</_long>
		<category>Accessibility</category>
		<deps>
			<relation type="after">
				<plugin>decoration</plugin>
				<plugin>blur</plugin>
			</relation>
		</deps>

		<group>
			<_short>Opacity</_short>

			<subgroup>
				<option name="opacity_increase_key" type="string">
					<_short>Increase Opacity</_short>
					<_long>Opacity Increase</_long>
					<hint>key</hint>
					<default/>
				</option>

				<option name="opacity_increase_button" type="string">
					<_short>Increase Opacity</_short>
					<_long>Opacity Increase</_long>
					<hint>button</hint>
					<default>&lt;Alt&gt;Button4</default>
				</option>

				<option name="opacity_decrease_key" type="string">
					<_short>Decrease Opacity</_short>
					<_long>Opacity Decrease</_long>
					<hint>key</hint>
					<default/>
				</option>

				<option name="opacity_decrease_button" type="string">
					<_short>Decrease Opacity</_short>
					<_long>Opacity Decrease</_long>
					<hint>button</hint>
					<default>&lt;Alt&gt;Button5</default>
				</option>

				<option name="opacity_step" type="int" per_screen="true">
					<_short>Step</_short>
					<_long>Opacity Step</_long>
					<min>1</min>
					<max>10</max>
					<default>5</default>
				</option>
			</subgroup>

			<subgroup multilist="true">
				<_short>Window specific settings</_short>

				<option name="opacity_matches" type="list_string" per_screen="true">
					<_short>Windows</_short>
					<_long>Windows that should have a different opacity by default</_long>
					<hint>match</hint>
					<default/>
				</option>

				<option name="opacity_values" type="list_int" per_screen="true">
					<_short>Window values</_short>
					<_long>Opacity values for windows</_long>
					<default/>
					<min>0</min>
					<max>100</max>
				</option>
			</subgroup>
		</group>

		<group>
			<_short>Brightness</_short>

			<subgroup>
				<option name="brightness_increase_key" type="string">
					<_short>Increase Brightness</_short>
					<_long>Brightness Increase</_long>
					<hint>key</hint>
					<default/>
				</option>

				<option name="brightness_increase_button" type="string">
					<_short>Increase Brightness</_short>
					<_long>Brightness Increase</_long>
					<hint>button</hint>
					<default/>
				</option>

				<option name="brightness_decrease_key" type="string">
					<_short>Decrease Brightness</_short>
					<_long>Brightness Decrease</_long>
					<hint>key</hint>
					<default/>
				</option>

				<option name="brightness_decrease_button" type="string">
					<_short>Decrease Brightness</_short>
					<_long>Brightness Decrease</_long>
					<hint>button</hint>
					<default/>
				</option>

				<option name="brightness_step" type="int" per_screen="true">
					<_short>Step</_short>
					<_long>Brightness Step</_long>
					<min>1</min>
					<max>10</max>
					<default>5</default>
				</option>
			</subgroup>

			<subgroup multilist="true">
				<_short>Window specific settings</_short>

				<option name="brightness_matches" type="list_string" per_screen="true">
					<_short>Windows</_short>
					<_long>Windows that should have a different brightness by default</_long>
					<hint>match</hint>
					<default/>
				</option>

				<option name="brightness_values" type="list_int" per_screen="true">
					<_short>Window values</_short>
					<_long>Brightness values for windows</_long>
					<default/>
					<min>0</min>
					<max>100</max>
				</option>
			</subgroup>
		</group>

		<group>
			<_short>Saturation</_short>

			<subgroup>
				<option name="saturation_increase_key" type="string">
					<_short>Increase Saturation</_short>
					<_long>Saturation Increase</_long>
					<hint>key</hint>
					<default/>
				</option>

				<option name="saturation_increase_button" type="string">
					<_short>Increase Saturation</_short>
					<_long>Saturation Increase</_long>
					<hint>button</hint>
					<default/>
				</option>

				<option name="saturation_decrease_key" type="string">
					<_short>Decrease Saturation</_short>
					<_long>Saturation Decrease</_long>
					<hint>key</hint>
					<default/>
				</option>

				<option name="saturation_decrease_button" type="string">
					<_short>Decrease Saturation</_short>
					<_long>Saturation Decrease</_long>
					<hint>button</hint>
					<default/>
				</option>

				<option name="saturation_step" type="int" per_screen="true">
					<_short>Step</_short>
					<_long>Saturation Step</_long>
					<min>1</min>
					<max>10</max>
					<default>5</default>
				</option>
			</subgroup>

			<subgroup multilist="true">
				<_short>Window specific settings</_short>

				<option name="saturation_matches" type="list_string" per_screen="true">
					<_short>Windows</_short>
					<_long>Windows that should have a different saturation by default</_long>
					<hint>match</hint>
					<default/>
				</option>

				<option name="saturation_values" type="list_int" per_screen="true">
					<_short>Window values</_short>
					<_long>Saturation values for windows</_long>
					<default/>
					<min>0</min>
					<max>100</max>
				</option>
			</subgroup>
		</group>
	</plugin>
</fusilli>

