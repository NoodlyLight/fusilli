<?xml version="1.0" encoding="UTF-8"?>
<fusilli>
	<plugin name="neg">
		<_short>Negative</_short>
		<_long>Used to set a window or screen negative</_long>

		<category>Accessibility</category>
		<deps>
			<relation type="after">
				<plugin>blur</plugin>
			</relation>
		</deps>

		<group>
			<_short>General</_short>

			<subgroup>
				<option name="window_toggle_key" type="string">
					<_short>Toggle Window Negative</_short>
					<_long>Toggle active window negative</_long>
					<hint>key</hint>
					<default>&lt;Super&gt;n</default>
				</option>

				<option name="screen_toggle_key" type="string">
					<_short>Toggle Screen Negative</_short>
					<_long>Toggle screen negative</_long>
					<hint>key</hint>
					<default>&lt;Super&gt;m</default>
				</option>
			</subgroup>
		</group>

		<group>
			<_short>Advanced</_short>

			<subgroup>
				<option name="neg_match" type="string" per_screen="true">
					<_short>Neg Windows</_short>
					<_long>Windows to be negative by default</_long>
					<hint>match</hint>
					<default>any</default>
				</option>

				<option name="exclude_match" type="string" per_screen="true">
					<_short>Exclude Windows</_short>
					<_long>Windows to exclude from negating</_long>
					<hint>match</hint>
					<default>type=Desktop</default>
				</option>
			</subgroup>
		</group>
	</plugin>
</fusilli>
